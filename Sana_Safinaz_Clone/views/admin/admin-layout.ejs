<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="/css/admin-style.css">
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="brand">
                <a href="/" class="brand-link">
                    <i class="fa-solid fa-home"></i>
                    <span>Main Website</span>
                </a>
            </div>
            <nav class="menu">
                <a href="/admin" class="menu-item active">
                    <i class="fa-solid fa-chart-line"></i> Dashboard
                </a>
                <a href="/admin/products" class="menu-item">
                    <i class="fa-solid fa-box"></i> Manage Products
                </a>
                <a href="/admin/categories" class="menu-item">
                    <i class="fa-solid fa-list"></i> Manage Categories
                </a>
                <a href="/admin/orders" class="menu-item">
                    <i class="fa-solid fa-cart-shopping"></i> View Orders
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="content">
            <header class="admin-header">
                <h1>Admin Panel</h1>
                <div class="admin-actions">
                    <a href="/logout" class="btn-logout">Logout</a>
                </div>
            </header>
            <main>

                <div>
                    <%- body %>
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

